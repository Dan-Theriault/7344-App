<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jasonngor.com.sustainabilitylifestylescorecard.CommuteActivity">

    <TextView
        android:id="@+id/commute_method_textbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_transport"
        android:layout_alignStart="@+id/et_transport"
        android:gravity="center"
        android:text="Commute Method"
        android:textColor="@color/colorBlack"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/commute_distance_textbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_"
        android:layout_alignStart="@+id/et_"
        android:gravity="center"
        android:text="Commute Distance"
        android:textColor="@color/colorBlack"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/et_transport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Car"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="203dp" />

    <EditText
        android:id="@+id/et_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_transport"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="10 miles"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="165dp" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:text="Submit"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="295dp"
        android:onClick="onSubmitCommutePress"/>
</RelativeLayout>
