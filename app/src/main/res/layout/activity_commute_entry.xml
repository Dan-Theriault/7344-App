<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jasonngor.com.sustainabilitylifestylescorecard.CommuteEntryActivity">

    <TextView
        android:id="@+id/commute_method_textbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/commute_method_spinner"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Commute Method"
        android:textColor="@color/colorBlack"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/commute_distance_textbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_commute_distance"
        android:layout_alignStart="@+id/commute_method_textbox"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Commute Distance"
        android:textColor="@color/colorBlack"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/et_commute_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_login"
        android:layout_alignStart="@+id/commute_distance_textbox"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="miles"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="165dp" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:text="Submit"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="295dp"
        android:onClick="onSubmitCommutePress"/>

    <Spinner
        android:id="@+id/commute_method_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/commute_distance_textbox"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:spinnerMode="dropdown" />
</RelativeLayout>
