<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1080px"
    android:layout_height="1920px"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context="jasonngor.com.sustainabilitylifestylescorecard.LandingActivity">


    <Button
        android:id="@+id/btn_login_landing"
        android:layout_width="465px"
        android:layout_height="168px"
        android:layout_above="@+id/btn_register"
        android:layout_alignStart="@+id/btn_register"
        android:layout_marginBottom="24dp"
        android:background="@drawable/loginbtn"
        android:onClick="onLoginPress" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="465px"
        android:layout_height="168px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="147dp"
        android:background="@drawable/regbtn"
        android:onClick="onRegisterPress" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="987px"
        android:layout_height="663px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:background="@drawable/background" />

