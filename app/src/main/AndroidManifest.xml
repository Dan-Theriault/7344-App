<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jasonngor.com.sustainabilitylifestylescorecard">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LandingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".CommuteActivity" />
        <activity
            android:name=".JournalActivity"
            android:label="JournalActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".NoteActivity"
            android:label="NoteTakingActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".WaterBillActivity"
            android:label="@string/title_activity_water_bill"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ElectricityActivity"
            android:label="@string/title_activity_electricity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ElectricityEntryActivity"
            android:label="@string/title_activity_electricity_entry"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".WaterBillEntryActivity"
            android:label="@string/title_activity_water_bill_entry"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".DietActivity" />
        <activity android:name=".DietEntryActivity" />
        <activity android:name=".SearchRecipeActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>